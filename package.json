{
  "name": "lrc-file-analysis",
  "version": "2.0.0",
  "private": false,
  "description": "此脚本可以将网络上的lrc歌词文件解析出来,并可以跟随video,audio播放器显示歌词",
  "repository": {
    "url": "xiaohuohumax/LrcFile-Analysis",
    "type": "git"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:init":"npm run build && npm link && cd test && npm i && npm link lrc-file-analysis",
    "test:dev": "cd test && npm run dev"
  },
  "main": "dist/lrc.js",
  "module": "dist/lrc.mjs",
  "typings": "dist/lrc.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lrc.mjs",
      "require": "./dist/lrc.js"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "lrc",
    "lrc-file",
    "video",
    "audio",
    "music",
    "analysis"
  ],
  "author": "xiaohuohumax",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cd": "^0.3.3",
    "test": "file:../test"
  }
}